<h2><%= @message.title %></h2>
<p>Posted By <b> <%= @message.user.email %> <i> <%= time_ago_in_words(@message.created_at) %> ago </i></b></p>
<p><%= @message.description %></p>
<h3>Comments:</h3>
<!--render every comment of message-->
<%= render @message.comments %>

<h3>Reply to Message</h3>
<%= render 'comments/form' %>
<%= link_to "Back", root_path %>
<% if user_signed_in? %>
  <% if @message.user_id == current_user.id %>
    <%=link_to "Edit", edit_message_path  %>
    <%= link_to "Delete", message_path(@message), method: :delete, data: { confirm: "Are you delete message?"} %>
  <% end %>
<% end %>